{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "rootDir": "./targets",
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "plugins": [
      { "transform": "./transformers/deterministic.ts", "type": "checker" }
    ]
  },
  "include": [
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
